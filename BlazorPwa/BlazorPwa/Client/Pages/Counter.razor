@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @StateProvider.AppState.Counter</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    /*TODO Blazor Web Assembly PWA Auto Refresh Update Tip 11*/
    [CascadingParameter]
    public CascadingAppStateProvider StateProvider { get; set; }

    private async Task IncrementCount()
    {
        StateProvider.AppState.Counter++;
        await StateProvider.SaveChangesAsync();
    }
}
